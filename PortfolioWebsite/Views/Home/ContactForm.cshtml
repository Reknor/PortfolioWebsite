@model BartlomiejJagielloLab4ZadDom.Models.ContactFormViewModel

@{
    ViewData["Title"] = "Contact form";
}

<!-- Specify where data will be sent, controller and form type -->
@using (Html.BeginForm("ContactForm", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    // Contact form header
    <div class="form-group">
        <h2>Get in touch</h2>
    </div>

    // Contact form prompt message
    <div class="form-group">
        <label id="contact-prompt-text">
            If you have any questions just fill in the contact form and I'll answer you shortly.
            <br />If you just want to leave a comment, please don't fill in e-mail field.
        </label>
    </div>

    // Contact form name
    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            <!-- Check if required field was given -->
            @Html.ValidationMessageFor(model => model.Name, "Please enter name", new { @class = "text-danger" })
        </div>
    </div>

    // Contact form e-mail
    <div class="form-group">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    // Contact form text
    <div class="form-group">
        @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Text, "Please enter message text", new { @class = "text-danger" })
        </div>
    </div>

    // Button to send contact form
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Send" class="btn btn-success" />
        </div>
    </div>

}   